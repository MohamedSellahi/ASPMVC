@model WebServices.Models.Reservation

<div class="panel-heading">Create Reservation</div>

<div class="panel-body">
   @using (Html.BeginForm("Add", "Home")) {

      <div class="form-group">
         <label class="control-label">ClientName</label>
         @Html.EditorFor(m => m.ClientName, new { htmlAttributes = new { @class = "form-control" } })
      </div>

      <div class="form-group">
         <label>Location</label>
         @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control" } })
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
   }
</div>